font-color = white
main-color = darkorange

.button
  background-color main-color
  color font-color
  font-size 18px
  font-weight bold
  border none
  border-radius 20px
  cursor pointer
  margin-right 10px
  display flex
  align-items center
  justify-content space-between
  padding 10px 20px
  position relative
  overflow hidden
  transition transform 0.3s ease, color 0.3s ease

.button:hover:not(:active)::before
  content ''
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color font-color
  opacity 0.12
  pointer-events none
  transform scale(1.05)
  transition transform 0.3s ease

.button:active
  color font-color
  transform scale(0.95)
  transition transform 0.3s ease, color 0.3s ease

.button-text
  white-space nowrap
  overflow hidden
  text-overflow ellipsis