font-color = white
main-color = green

.counter
  position relative
  width 50px
  height 50px
  background-color main-color
  color font-color
  border none
  border-radius 50%
  margin-left 10px
  font-size 14px
  display flex
  align-items center
  justify-content center
  overflow hidden

.counter h1
  position absolute
  width 100%
  text-align center